<h1><%= @list.title %></h1>

 <% unless @list %>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
 <% else %>
  <div class="row">
    <h2>Items</h2>
      <div class='new-item'>
        <%= render partial: 'items/form', locals: {list: @list} %>
      </div>
      <ul>
        <%= render @list.items %>
      </ul>
  </div>
<% end %>