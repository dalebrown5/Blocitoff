<% if current_user %>
  <h4>Add a new item to your list:</h4>
  <div class="form-group">
  <%= form_for [list, @item] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter To-Do" %>
    </div>
    <div class="form-group">
    <%= f.submit "Save Item", class: 'btn btn-success btn-sm' %>
    </div>
  <% end %>
<% end %>

